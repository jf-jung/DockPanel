<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="DockPanel" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Button Content="Dock=Left #1" DockPanel.Dock="Left"></Button>
        <Button Content="Dock=Left #2" DockPanel.Dock="Left"></Button>
        <Button Content="Dock=Left #3" DockPanel.Dock="Left"></Button>
        <Button Content="Dock=Right" DockPanel.Dock="Right"></Button>
        <Button Content="Dock=Top" DockPanel.Dock="Top"></Button>
        <Button Content="Dock=Bottom" DockPanel.Dock="Bottom"></Button>
        <Button Content="LastChildFill=True"></Button>
    </DockPanel>


</Window>
